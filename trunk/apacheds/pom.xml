    <dependency>
      <groupId>org.apache.directory.installers</groupId>
      <artifactId>apacheds-noarch-installer</artifactId>
      <version>${pom.version}</version>
    </dependency>  
    <dependency>
      <groupId>tanukisoft</groupId>
      <artifactId>wrapper</artifactId>
      <scope>runtime</scope>
    </dependency>
